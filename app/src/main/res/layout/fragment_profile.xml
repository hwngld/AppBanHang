<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:padding="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:background="@drawable/line_around">
               <ImageView
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:src="@drawable/ic_account"/>
               <LinearLayout
                   android:layout_marginLeft="20dp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   android:gravity="center">
                   <TextView
                       android:id="@+id/tvTen"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Họ và tên"
                       android:textStyle="bold"
                       android:textSize="20sp"/>
                   <TextView
                       android:id="@+id/tvEmail"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="hovaten12345@gmail.com"/>
               </LinearLayout>
           </LinearLayout>
           <TextView
               android:background="@drawable/line_around"
               android:padding="20dp"
               android:id="@+id/tv_thongTin"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Thông tin cá nhân"
               android:textSize="20sp"
               />
           <TextView
               android:background="@drawable/line_around"
               android:padding="20dp"
               android:id="@+id/tv_doimk"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Đổi mật khẩu"
               android:textSize="20sp"
               />
           <TextView
               android:background="@drawable/line_around"
               android:padding="20dp"
               android:id="@+id/tv_dsDon"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Danh sách đơn hàng"
               android:textSize="20sp"
               />
           <TextView
               android:background="@drawable/line_around"
               android:padding="20dp"
               android:id="@+id/tv_dsDV"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Dịch vụ đã đặt"
               android:textSize="20sp"
               />
           <TextView
               android:background="@drawable/line_around"
               android:padding="20dp"
               android:id="@+id/tv_DangXuat"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Đăng xuất"
               android:textSize="20sp"
               />
       </LinearLayout>
   </ScrollView>
</LinearLayout>