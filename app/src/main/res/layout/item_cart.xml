<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_item_product_cart"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/checkbox_product"/>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_product_cart"
                android:src="@drawable/ic_launcher_foreground"/>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:text="Tên sản phẩm"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:id="@+id/tv_productName_cart" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_productPrice_cart"
                        android:text="10000đ"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_productProPrice_cart"
                        android:text="10000đ"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#ff00"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:layout_toLeftOf="@+id/tvCount"
                        android:id="@+id/img_remove"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_remove"/>
                    <TextView
                        android:layout_toLeftOf="@+id/img_plus"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/tvCount"/>
                    <ImageView
                        android:layout_alignParentRight="true"
                        android:id="@+id/img_plus"
                        android:layout_margin="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add"/>
                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_delete"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>